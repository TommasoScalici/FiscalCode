@using FiscalCode.Components.Pages
@using FiscalCode.Resources.Languages

@inject IDialogService DialogService
@inject IStringLocalizer<Localization> Localizer

<MudAppBar Elevation="1">
    <MudText Typo="Typo.h4"
             Class="tracking-wider bg-clip-text text-transparent bg-gradient-to-l from-green-200 via-green-300 to-blue-500">
        @Localizer["AppTitle"]
    </MudText>

    <MudSpacer />
    <MudIconButton @onclick="AddButtonClicked" Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Edge="Edge.End" />
    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit">
        <MudMenuItem OnClick="InfoMenuItemClicked" OnTouch="InfoMenuItemClicked">@Localizer["About"]</MudMenuItem>
    </MudMenu>
</MudAppBar>

@code {

    [Parameter]
    public EventCallback OnAddButtonClicked { get; set; }


    private async void AddButtonClicked() => await OnAddButtonClicked.InvokeAsync();

    private async void InfoMenuItemClicked() => await DialogService.ShowAsync<AboutDialog>();
}
